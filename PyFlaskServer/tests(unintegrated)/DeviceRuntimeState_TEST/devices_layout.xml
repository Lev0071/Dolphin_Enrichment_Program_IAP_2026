<!-- This xml format is how our i2c devices will be enumerated,and allocated on the UI with its assigned positions -->

<uiLayout>
  <devices>

    <device id="btn-1" type="button">
      <name>Feed Button</name>
      <i2c_address>0x08</i2c_address>
      <position>
        <x_pct>0.15</x_pct>
        <y_pct>0.25</y_pct>
      </position>
      <style>
        <color>#0d6efd</color>
        <shape>rounded</shape>
        <icon>none</icon>
      </style>
    </device>

    <device id="other-1" type="other">
      <name>LED Indicator</name>
      <i2c_address>0x09</i2c_address>
      <position>
        <x_pct>0.4</x_pct>
        <y_pct>0.5</y_pct>
      </position>
      <style>
        <color>#ff0000</color>
        <shape>circle</shape>
        <icon>none</icon>
      </style>
    </device>


    <device id="btn-feed" type="button">
      <name>Feed Button</name>
      <i2c_address>0x08</i2c_address>
      <position>
        <x_pct>0.15</x_pct>
        <y_pct>0.25</y_pct>
      </position>
      <style>
        <color>#0d6efd</color>
        <shape>rounded</shape>
        <icon>none</icon>
      </style>
    </device>

    <device id="led-water" type="other">
      <name>Water LED</name>
      <i2c_address>0x09</i2c_address>
      <position>
        <x_pct>0.55</x_pct>
        <y_pct>0.30</y_pct>
      </position>
      <style>
        <color>#ff0000</color>
        <shape>circle</shape>
        <icon>none</icon>
      </style>
    </device>

    <device id="solenoid-1" type="other">
      <name>Solenoid Valve</name>
      <i2c_address>0x0A</i2c_address>
      <position>
        <x_pct>0.75</x_pct>
        <y_pct>0.65</y_pct>
      </position>
      <style>
        <color>#198754</color>
        <shape>rounded</shape>
        <icon>none</icon>
      </style>
    </device>

  </devices>
</uiLayout>
